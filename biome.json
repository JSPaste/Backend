{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": ["**/node_modules/", "documents/", "src/structures/", "dist/"],
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"enabled": true,
			"jsxQuoteStyle": "single",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingComma": "none"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"enabled": true,
		"ignore": ["**/node_modules/", "documents/", "src/structures/", "dist/"],
		"rules": {
			"recommended": true,
			"complexity": { "noStaticOnlyClass": "off" },
			"suspicious": { "noExplicitAny": "off" }
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
